<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetallePelicula"
    android:padding="20dp">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddfavoritos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00BCD4"
        android:longClickable="false"
        android:saveEnabled="false"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:src="@drawable/ic_favorite_black_24dp"
        app:backgroundTint="@color/colorPrimary"
        app:useCompatPadding="false"
        tools:visibility="visible" />



        <ImageView
            android:id="@+id/imagenLogodetalle"
            android:layout_width="211dp"
            android:layout_height="302dp"
            android:layout_gravity="center"
            android:src="@drawable/cepilladocaballero" />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <TextView
              android:id="@+id/titulodetalle"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:text="7500: AviÃ³n secuestrado"
              android:textColor="?attr/textcolor"
              android:textSize="20dp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/Fechadetalle"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"

              android:text="19 jun 2020"
              android:textColor="?attr/textcolor"
              android:textSize="15dp" />

      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView

              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=" Puntuacion de usuarios:"
              android:textColor="?attr/textcolor"
              android:textSize="20dp" />

          <TextView
              android:id="@+id/Puntuaciondetalle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="3.5 %"
              android:textColor="?attr/textcolor"
              android:textSize="20dp" />
      </LinearLayout>


  </LinearLayout>





</LinearLayout>